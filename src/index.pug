doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    title Artisfy
    meta(name="description" content="Artisfy 2.0!")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:400,700|VT323")
    link(rel="stylesheet" href="/css/main.css")
  body
    <!--[if lte IE 9]>
